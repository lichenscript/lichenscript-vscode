{
    "name": "lichenscript-vscode",
    "displayName": "Lichenscript VSCode",
    "description": "The language support of LichenScript.",
    "version": "0.3.1",
    "icon": "images/lcIcon.png",
    "license": "MIT",
    "publisher": "VincentChan",
    "repository": {
        "type": "git",
        "url": "https://github.com/vincentdchan/lichenscript-vscode"
    },
    "engines": {
        "vscode": "^1.64.0"
    },
    "activationEvents": [
        "onLanguage:lichenscript"
    ],
    "categories": [
        "Programming Languages"
    ],
    "scripts": {
        "clean": "rimraf ./client/out ./server/out",
        "vscode:prepublish": "npm run clean && npm run esbuild:client -- --minify && npm run esbuild:server -- --minify",
        "esbuild:client": "esbuild ./client/src/extension.ts --bundle --target=es2020 --outfile=client/out/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild:server": "esbuild ./server/src/server.ts --bundle --target=es2020 --outfile=server/out/server.js --format=cjs --platform=node",
        "esbuild-watch:client": "npm run esbuild:client -- --sourcemap --watch",
        "esbuild-watch:server": "npm run esbuild:server -- --sourcemap --watch"
    },
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "lichenscript",
                "aliases": [
                    "LichenScript",
                    "lichenscript"
                ],
                "extensions": [
                    ".lc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lichenscript",
                "scopeName": "source.lichenscript",
                "path": "./syntaxes/lichenscript.tmLanguage.json"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^17.0.21",
        "esbuild": "^0.14.28",
        "rimraf": "^3.0.2",
        "typescript": "^4.6.2"
    }
}
